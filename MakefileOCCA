flags = -I${OCCA_DIR}/include -I. -m64
libs   =  -L/usr/lib -L${OCCA_DIR}/lib -locca -lmpich -llapack -lblas -lm -ldl

ifeq ($(DEBUG), 1)
	       flags += -g
else
	flags += -O3 -DNDEBUG
endif

luleshOCCA: lulesh.cpp
	$(CXX) $(flags) lulesh.cpp -o luleshOCCA $(libs)

compareResults: compareResults.cpp
	$(CXX) compareResults.cpp -o compareResults -lm

clean:
	rm -rf luleshOCCA compareResults
